{{> common_header}}

<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>user login</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form action="/user/login" method="post">
                <div class="form-group">
                    <label for="name">name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="your name">
                </div>
                <div class="form-group">
                    <label for="password">password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-default">login</button>
            </form>
            <p class="text-danger">
                if not user registration,
                <a class="btn btn-default" href="/user/register" role="button">go to user registration</a>
            </p>
        </div>
        <div class="col-md-6">
            {{#lineLoginEnabled}}
                <a href="/oauth/line" class="btn-block btn-social btn-line"><span class="fa fa-line"></span></a>
            {{/lineLoginEnabled}}
            {{#githubLoginEnabled}}
                <a href="/oauth/github" class="btn btn-block btn-social btn-github"><span class="fa fa-github"></span> Sign in with Github</a>
            {{/githubLoginEnabled}}
            {{#facebookLoginEnabled}}
                <a href="/oauth/facebook" class="btn btn-block btn-social btn-facebook"><span class="fa fa-facebook"></span> Sign in with Facebook</a>
            {{/facebookLoginEnabled}}
            {{#googleLoginEnabled}}
                <a href="/oauth/google" class="btn btn-block btn-social btn-google"><span class="fa fa-google"></span> Sign in with Google</a>
            {{/googleLoginEnabled}}
        </div>
    </div>
</div>

<style>
.btn-line {
    width: 142px;
    height: 40px;
}
.fa-line {
    background-image: url("/assets/img/btn_login_base.png");
    background-repeat: no-repeat;
    width: 100% !important;
    border-right: 0px !important;
}
.fa-line:active, .fa-line:forcus {
    background-image: url("/assets/img/btn_login_press.png");
}
.fa-line:hover {
    background-image: url("/assets/img/btn_login_hover.png");
}
</style>

{{> common_footer}}